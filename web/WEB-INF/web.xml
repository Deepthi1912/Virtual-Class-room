<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Servlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Signup</servlet-name>
        <servlet-class>Servlets.Signup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentDashboard</servlet-name>
        <servlet-class>StudentDashboard</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateProfile</servlet-name>
        <servlet-class>UpdateProfile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateProfileFaculty</servlet-name>
        <servlet-class>UpdateProfileFaculty</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QnA</servlet-name>
        <servlet-class>QnA</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QnAFacultyServlet</servlet-name>
        <servlet-class>QnAFacultyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Signup</servlet-name>
        <url-pattern>/Signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentDashboard</servlet-name>
        <url-pattern>/StudentDashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateProfile</servlet-name>
        <url-pattern>/UpdateProfile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateProfileFaculty</servlet-name>
        <url-pattern>/UpdateProfileFaculty</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QnA</servlet-name>
        <url-pattern>/QnA</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QnAFacultyServlet</servlet-name>
        <url-pattern>/QnAFacultyServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
